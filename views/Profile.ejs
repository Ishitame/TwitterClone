<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>X Profile Page</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdn.jsdelivr.net/npm/remixicon/fonts/remixicon.css" rel="stylesheet">
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap');
    body {
      font-family: 'Inter', sans-serif;
    }
  </style>
</head>
<body class="bg-black text-white min-h-screen">

  <!-- Container -->
  <div class="flex min-h-screen">

    <!-- Left Sidebar -->
    <div class="left-side">
      <%- include('partials/left') %>
  </div>

       

    <!-- Main Content -->
    <div class="flex-grow border-r border-gray-800">
      <!-- Header -->
      <div class="sticky top-0 bg-black bg-opacity-75 backdrop-blur-md z-10 p-4 border-b border-gray-800">
        <div class="flex items-center">
          <div>
            <h2 class="font-bold text-xl">Username</h2>
            <p class="text-gray-500 text-sm">0 posts</p>
          </div>
        </div>
      </div>

      <!-- Profile Header -->
      <div class="relative">
        <div class="h-48 bg-gray-800"></div>
        <div class="absolute -bottom-16 left-4">
          <img src="https://via.placeholder.com/132" alt="Profile" class="w-32 h-32 rounded-full border-4 border-black">
        </div>
      </div>

      <!-- Profile Info -->
      <div class="mt-20 px-4">
        <div class="flex justify-end mb-4">
          <button class="border border-gray-500 text-white px-4 py-1.5 rounded-full font-bold hover:bg-gray-900">
            Edit profile
          </button>
        </div>

        <div class="mb-4">
          <h2 class="font-bold text-xl"><%=user.username%></h2>
          <p class="text-gray-500">@<%=user.username%></p>
        </div>

        <div class="mb-4">
          <p class="text-gray-300">Bio goes here</p>
        </div>

        <div class="flex items-center space-x-4 text-gray-500 mb-4">
         
          <span><i class="ri-calendar-line"></i> Joined Date</span>
        </div>

        <div class="flex space-x-4 mb-4">
          <span><strong><%=following%></strong> <span class="text-gray-500">Following</span></span>
          <span><strong><%=followers%></strong> <span class="text-gray-500">Followers</span></span>
        </div>
      </div>

      <!-- Tabs -->
      <div class="border-b border-gray-800">
        <nav class="flex">
          <a href="#" class="px-4 py-3 text-white border-b-2 border-blue-500 font-bold">Posts</a>
          <a href="#" class="px-4 py-3 text-gray-500 hover:bg-gray-800">Replies</a>
          <a href="#" class="px-4 py-3 text-gray-500 hover:bg-gray-800">Media</a>
          <a href="#" class="px-4 py-3 text-gray-500 hover:bg-gray-800">Likes</a>
        </nav>
      </div>

      <!-- Posts -->
      <div class="p-4 hover:bg-gray-900/50 rounded-lg shadow-md">
        <div class="flex flex-col">
          <div class="flex items-center space-x-4">
            <img src="https://via.placeholder.com/40" class="w-10 h-10 rounded-full" alt="User">
            <div>
              <span class="font-bold"><%=user.username%></span>
              <span class="text-gray-500">@<%=user.username%></span>
              <span class="text-gray-500">Â· 1h</span>
            </div>
          </div>
          <p class="mt-2">This is a sample post from <%=user.username%>. #profile #newpost</p>
          <div class="flex justify-between mt-4 text-gray-500">
            <span><i class="ri-heart-line"></i></span>
            <span><i class="ri-reply-line"></i></span>
            <span><i class="ri-repeat-line"></i></span>
          </div>
        </div>
      </div>
    </div>

    <!-- Right Sidebar -->
    <div class="right-side">
      <%- include('partials/right') %>
  </div>
    
  