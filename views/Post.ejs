<main class="mt-6 w-full max-w-2xl px-4">
    <form>
        <!-- Post Textarea -->
        <textarea class="w-full p-4 border border-gray-300 rounded-lg" placeholder="What's on your mind?"></textarea>

        <!-- Post Options -->
        <div class="flex justify-between mt-4">
            <button class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600">Post</button>
            <button class="bg-gray-200 text-gray-800 px-4 py-2 rounded-lg hover:bg-gray-300">Cancel</button>
        </div>

        <!-- Post Details -->
        <div class="mt-4">
            <h2 class="text-gray-800 font-bold">Post Details</h2>
            <div class="flex justify-between mt-2">
                <div class="flex items-center">
                    <i class="ri-image-line text-gray-600"></i>
                    <span class="text-gray-600 ml-2">Add Image</span>
                </div>
                <div class="flex items-center">
                    <i class="ri-video-line text-gray-600"></i>
                    <span class="text-gray-600 ml-2">Add Video</span>
                </div>
                <div class="flex items-center">
                    <i class="ri-map-pin-line text-gray-600"></i>
                    <span class="text-gray-600 ml-2">Add Location</span>
                </div>
            </div>
        </div>
    </form>
</main>